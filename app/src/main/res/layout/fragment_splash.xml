<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SplashFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splash_container">
        <ImageView
            android:id="@+id/mlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="@id/splash_container"
            app:layout_constraintStart_toStartOf="@id/splash_container"
            app:layout_constraintEnd_toEndOf="@id/splash_container"
            app:layout_constraintBottom_toBottomOf="@id/splash_container"
            android:src="@drawable/movieapplogo"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>