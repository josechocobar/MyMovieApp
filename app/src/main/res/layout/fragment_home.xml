<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_container"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/logo_container"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal|center_vertical"
                app:layout_constraintEnd_toEndOf="@id/home_container"
                app:layout_constraintStart_toStartOf="@id/home_container"
                app:layout_constraintTop_toTopOf="@id/home_container">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/movieapplogo" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/top_image_carousel"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:src="@drawable/movieapplogo"
                app:layout_constraintEnd_toEndOf="@id/home_container"
                app:layout_constraintStart_toStartOf="@id/home_container"
                app:layout_constraintTop_toBottomOf="@id/logo_container" />

            <ImageButton
                android:id="@+id/disney_group"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/top_image_carousel"
                app:layout_constraintStart_toStartOf="@id/home_container"
                app:layout_constraintEnd_toStartOf="@id/pixar_group"
                />

            <ImageButton
                android:id="@+id/pixar_group"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/top_image_carousel"
                app:layout_constraintStart_toEndOf="@id/disney_group"
                app:layout_constraintEnd_toStartOf="@id/marvel_group"/>

            <ImageButton
                android:id="@+id/marvel_group"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/top_image_carousel"
                app:layout_constraintStart_toEndOf="@id/pixar_group"
                app:layout_constraintEnd_toStartOf="@id/stars_wars_group"/>

            <ImageButton
                android:id="@+id/stars_wars_group"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/top_image_carousel"
                app:layout_constraintStart_toEndOf="@id/marvel_group"
                app:layout_constraintEnd_toEndOf="@id/history_group"/>

            <ImageButton
                android:id="@+id/history_group"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/top_image_carousel"
                app:layout_constraintStart_toEndOf="@id/stars_wars_group"
                app:layout_constraintEnd_toEndOf="@id/home_container"/>
            <TextView
                android:id="@+id/tv_suggestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sugeridos para ti"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/home_container"
                app:layout_constraintEnd_toEndOf="@id/home_container"
                app:layout_constraintTop_toBottomOf="@id/stars_wars_group"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_suggestions"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_suggestions"
                app:layout_constraintStart_toStartOf="@id/home_container"
                app:layout_constraintEnd_toEndOf="@id/home_container"/>
            <TextView
                android:id="@+id/tv_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevos"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/home_container"
                app:layout_constraintEnd_toEndOf="@id/home_container"
                app:layout_constraintTop_toBottomOf="@id/rv_suggestions"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_new"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_new"
                app:layout_constraintStart_toStartOf="@id/home_container"
                app:layout_constraintEnd_toEndOf="@id/home_container"/>

            <TextView
                android:id="@+id/tv_continue_watching"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="continue_watching"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/home_container"
                app:layout_constraintEnd_toEndOf="@id/home_container"
                app:layout_constraintTop_toBottomOf="@id/rv_new"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_continue_watching"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_continue_watching"
                app:layout_constraintStart_toStartOf="@id/home_container"
                app:layout_constraintEnd_toEndOf="@id/home_container"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</FrameLayout>